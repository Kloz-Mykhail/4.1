<section id="main" class="main-wrapper">
	<div class="container">
		<div id="content" class="book_block col-xs-12 col-sm-12 col-md-12 col-lg-12">
			<div id="id" book-id="{{{id}}}">
				<div id="bookImg" class="col-xs-12 col-sm-3 col-md-3 item" style="margin:;">
					<img src="/img/books/{{{id}}}.jpg" alt="Responsive image" class="img-responsive">

					<hr>
				</div>
				<div class="col-xs-12 col-sm-9 col-md-9 col-lg-9 info">
					` <div class="bookInfo col-md-12">
						<div id="title" class="titleBook">{{{title}}}</div>
					</div>
					<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
						<div class="bookLastInfo">
							<div class="bookRow"><span class="properties">автор:</span>
								<span id="author">{{{author_name}}}</span>
							</div>
							<div class="bookRow"><span class="properties">год:</span><span id="year">{{{year}}}</span>
							</div>
							<div class="bookRow"><span class="properties">страниц:</span><span id="pages">{{{pages}}}</span>
							</div>
						</div>
					</div>

					<div class="btnBlock col-xs-12 col-sm-12 col-md-12">
						<button type="button" class="btnBookID btn-lg btn btn-success" data-toggle="modal"
							data-target="#exampleModalCenter">Хочу
							читать!</button>
						<!-- Modal -->
						<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
							aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
							<div class="modal-dialog modal-dialog-centered" role="document">
								<div class="modal-content">
									<div class="modal-body">
										Книга свободна и ты можешь прийти за ней.<br>
										Наш адрес: г. Кропивницкий, переулок Васильевский 10, 5 этаж.<br>
										Лучше предварительно прозвонить и предупредить нас, чтоб<br>
										не попасть в неловкую ситуацию.<br> Тел. 099 196 24 69
									</div>
									<div class="modal-footer row justify-content-center">
										<button type="button" id="counter" class="btn btn-success col-xs-2" data-dismiss="modal"> Ok
										</button>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="bookDescription col-xs-12 col-sm-12 col-md-12 hidden-xs hidden-sm">
						<h4>О книге</h4>
						<hr>
						<p id="description">{{{about}}}</p>
					</div>
				</div>
			</div>
		</div>
	</div>

	<script src="/book/counter.js"></script>

	</div>
</section>